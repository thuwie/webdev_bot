{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": [2, 120],
        "no-await-in-loop": "off",
        "no-console": "off",
        "no-continue": "off",
        "no-prototype-builtins": "off",
        "no-restricted-syntax": "off",
        "class-methods-use-this": "off"
    }
}
